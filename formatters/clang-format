---
# Set up defaults for unspecified options
BasedOnStyle: Google
# Set up default indentation width
IndentWidth:             4
TabWidth:                4
ContinuationIndentWidth: 4
---
Language: Cpp
# Don't indent access modifiers
AccessModifierOffset: -4
# Align everything as much as possible
AlignAfterOpenBracket:        Align
AlignConsecutiveAssignments:  true
AlignConsecutiveDeclarations: true
AlignEscapedNewlines:         true
AlignOperands:                true
AlignTrailingComments:        true
# Almost nothing goes on a single line
AllowAllConstructorInitializersOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
AllowShortBlocksOnASingleLine:             false
AllowShortCaseLabelsOnASingleLine:         false
AllowShortFunctionsOnASingleLine:          Empty
AllowShortIfStatementsOnASingleLine:       Never
AllowShortLambdasOnASingleLine:            Inline
AllowShortLoopsOnASingleLine:              false
AlwaysBreakAfterReturnType:                None
AlwaysBreakTemplateDeclarations:           MultiLine
# Don't do bin packing
BinPackArguments:                 false
BinPackParameters:                false
ExperimentalAutoDetectBinPacking: false
# Braces all go on their own lines
BreakBeforeBraces: Custom
BraceWrapping:
    AfterCaseLabel:        true
    AfterClass:            true
    AfterControlStatement: true
    AfterEnum:             true
    AfterFunction:         true
    AfterNamespace:        true
    AfterStruct:           true
    AfterUnion:            true
    AfterExternBlock:      true
    BeforeCatch:           true
    BeforeElse:            true
    IndentBraces:          false
    SplitEmptyFunction:    false
    SplitEmptyRecord:      false
    SplitEmptyNamespace:   false
# Don't break up operators unnecessarily
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: false
# Constructor initializer lists start on the next line
BreakConstructorInitializers: BeforeComma
# Inheritance lists begin on the next line
BreakInheritanceList: AfterColon
# String literals should never be auto-broken
BreakStringLiterals: false
# Set a sensible limit on columns
ColumnLimit: 120
# Namespaces always go on their own lines
CompactNamespaces: false
# Constructor initializers go on their own lines
ConstructorInitializerAllOnOneLineOrOnePerLine: false
# Use modern C++ styles where possible
Standard:             Cpp11
Cpp11BracedListStyle: true
# Don't guess about the style
DerivePointerAlignment: false
# Namespace close braces get a comment
FixNamespaceComments: true
# Try to sort includes sensibly, but allow engineer to override this with groups
IncludeBlocks: Preserve
IncludeCategories:
    - Regex:    '^.*gtest.*$'
      Priority: 90
    - Regex:    '^<filesystem>$'
      Priority: 89
    - Regex:    'logging\.hpp[">]$'
      Priority: 88
    - Regex:    '^<.*\/.*\.hpp>$'
      Priority: 5
    - Regex:    '^<.*\.hpp>$'
      Priority: 3
    - Regex:    '^<.*\/.*\.h>$'
      Priority: 4
    - Regex:    '^<.*\.h>$'
      Priority: 2
    - Regex:    '^<.*>$'
      Priority: 1
    - Regex:    '^".*\.hpp"$'
      Priority: 11
    - Regex:    '^".*\.h"$'
      Priority: 10
    - Regex:    '^".*"$'
      Priority: 12
# Case labels do not indent
IndentCaseLabels: false
# Don't indent preprocessor directives
IndentPPDirectives: None
# Use continuation indent for too-long function signatures
IndentWrappedFunctionNames: true
# Allow empty lines are start of scope
KeepEmptyLinesAtTheStartOfBlocks: true
# Establish a sensible limit on consecutive empty lines
MaxEmptyLinesToKeep: 3
# Do not indent namespace contents
NamespaceIndentation: None
# Try to keep comments sane
ReflowComments: true
# Sort include directives within groups to permit easy scanning
SortIncludes: true
# Sort consecutive using declarations to permit easy scanning
SortUsingDeclarations: true
# Don't insert unnecessary spaces
SpaceAfterCStyleCast:            false
SpaceAfterLogicalNot:            false
SpaceAfterTemplateKeyword:       false
SpaceBeforeParens:               Never
SpacesInAngles:                  false
SpacesInCStyleCastParentheses:   false
SpacesInContainerLiterals:       false
SpacesInParentheses:             false
SpacesInSquareBrackets:          false
SpaceInEmptyParentheses:         false
# Do insert spaces for readability
SpaceBeforeAssignmentOperators:    true
SpaceBeforeCpp11BracedList:        true
SpaceBeforeCtorInitializerColon:   true
SpaceBeforeRangeBasedForLoopColon: true
# Tabs are the devil
UseTab: Never
